.modal.fade#add-file-modal{ 'aria-hidden': 'true',
'aria-labelledby': 'add-file-modal-label',
role: 'dialog', tabindex: '-1' }
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %h5.modal-title#add-file-modal-label
          = t(:add_file_title)
        %button.close{ 'aria-label': 'Close',
        'data-dismiss': 'modal', type: 'button' }
          %span{ 'aria-hidden': 'true' } Ã—
      = form_for(:trial, url: committee_trial_upload_path(committee,
      trial), html: { multipart: true }) do |f|
        .modal-body
          .field.form-group
            = f.label :name
            = f.text_field :name, value: nil, class: 'form-control'
          .field.form-group
            = f.label :attachment
            = f.file_field :attachment, class: 'form-control'
        .modal-footer
          %button.btn.btn-secondary{ 'data-dismiss': 'modal',
          type: 'button' }
            = t(:close)
          = f.submit t(:add), class: 'btn btn-primary'
