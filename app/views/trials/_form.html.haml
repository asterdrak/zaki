= form_for [@committee, trial] do |f|
  - if trial.errors.any?
    #error-explanation
      %h2
        = pluralize(trial.errors.count, 'error')
        prohibited this trial from being saved:
      %ul
        - trial.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :deadline
    = f.date_select :deadline, discard_day: true
  .field
    = f.label :status
    = f.select :status, Trial::STATUSES
  .actions
    = f.submit 'Save'
